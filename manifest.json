{
  "manifest_version": 3,
  "name": "AdFriend",
  "description": "Block ads and replace with positive messages.",
  "version": "2.0",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab",
    "background"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-48.png"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icone-128.png"
  }
}
